<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/skyblue" />
            <stroke
                android:width="1dp"
                android:color="@color/blue" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/skyblue"
                android:endColor="@color/blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/blue" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>