<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.tuttifrutti.app.CreateGameActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo"
        android:id="@+id/modeSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textOff="Offline"
        android:textOn="Online" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oponentes"
        android:id="@+id/oponentsSelector"
        android:layout_below="@+id/modeSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textOff="Con amigos"
        android:textOn="Aleatorio" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:id="@+id/categoriesSelector"
        android:layout_below="@+id/oponentsSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:textOff="Libres"
        android:textOn="Controladas" />

    <Button
        android:background="@drawable/largebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:id="@+id/create"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="createGame" />

</RelativeLayout>
