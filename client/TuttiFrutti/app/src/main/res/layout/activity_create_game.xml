<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.tuttifrutti.app.CreateGameActivity">

    <Switch
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:background="@color/lightgrey"
        android:layout_height="wrap_content"
        android:text="Modo"
        android:thumbTextPadding="29dp"
        android:alpha="1"
        android:layout_alignLeft="@+id/categoriesSelector"
        android:layout_alignRight="@+id/categoriesSelector"
        android:id="@+id/modeSelector"
        android:checked="false"
        android:textOff="Offline"
        android:textOn="Online" />

    <Switch
        android:alpha="1"
        android:layout_marginLeft="10dp"
        android:background="@color/lightgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oponentes"
        android:id="@+id/oponentsSelector"
        android:layout_below="@+id/modeSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/categoriesSelector"
        android:layout_marginTop="40dp"
        android:textOff="Con amigos"
        android:textOn="Aleatorio" />

    <Switch
        android:alpha="1"
        android:layout_marginLeft="10dp"
        android:background="@color/lightgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:id="@+id/categoriesSelector"
        android:layout_below="@+id/oponentsSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:textOff="Libres"
        android:textOn="Controladas"
        />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/categoriesSelector"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/randomPlayersLayout">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Cantidad de rondas: "
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/lightgrey"
            android:id="@+id/lblRounds"/>

        <antistatic.spinnerwheel.WheelHorizontalView
            android:id="@+id/hour_horizontal"
            app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
            app:selectionDividerWidth="1px"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/lblRounds"
            android:paddingLeft="20dp"/>


    </RelativeLayout>





    <Button
        android:background="@drawable/largebutton"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:id="@+id/create"
        android:layout_marginTop="150dp"
        android:layout_alignTop="@+id/categoriesSelector"
        android:layout_centerHorizontal="true"
        android:onClick="createGame" />

</RelativeLayout>
