
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.tuttifrutti.app.ViewGameStatusActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/divBoton">

    <Button
        android:background="@drawable/largebutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crear Partida"
        android:id="@+id/createGame"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="createGame" />
    </RelativeLayout>


        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pull_refresh_list"
            android:layout_height="fill_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/divBoton" />


    </RelativeLayout>
