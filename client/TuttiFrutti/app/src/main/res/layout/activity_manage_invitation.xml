<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.tuttifrutti.app.ManageInvitationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te ha invitado: "
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblInicio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameTextView"
        android:text="usuario "
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:paddingTop="40dp"
        android:layout_below="@id/lblInicio"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameTextView"
        android:paddingTop="80dp"
        tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
        android:id="@+id/modeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo: "
            android:id="@+id/lblModo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameModeTextView"
            android:layout_toRightOf="@id/lblModo"
            android:paddingLeft="50dp"
            android:layout_alignParentTop="true"
            android:text="ModoValue: "/>

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/modeLayout"
        tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
        android:id="@+id/opponentsLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oponentes: "

            android:id="@+id/lblopponents"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/opponentsModeTextView"
            android:layout_toRightOf="@id/lblopponents"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:text="ModoValue: "/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/opponentsLayout"
        tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
        android:id="@+id/categoryLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="categorÃ­as: "

            android:id="@+id/lblcategory"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryModeTextView"
            android:layout_toRightOf="@id/lblcategory"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:text="ModoValue: "/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechazar"
        android:id="@+id/reject"
        android:onClick="rejectInvitation"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="63dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:layout_alignParentRight="true"
        android:id="@+id/accept"
        android:onClick="acceptInvitation"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="63dp" />

</RelativeLayout>
