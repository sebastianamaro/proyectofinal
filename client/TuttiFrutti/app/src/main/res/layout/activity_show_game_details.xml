<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tuttifrutti.app.ShowGameDetailsActivity">

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar!"
        android:onClick="play"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPlay"
        android:paddingTop="20dp"
        tools:context="com.example.tuttifrutti.app.ShowGameDetailsActivity"
        android:id="@+id/modeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo: "
            android:id="@+id/lblModo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameModeTextView"
            android:layout_toRightOf="@id/lblModo"
            android:paddingLeft="50dp"
            android:layout_alignParentTop="true"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/modeLayout"
        tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
        android:id="@+id/opponentsLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oponentes: "
            android:id="@+id/lblopponents"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/opponentsModeTextView"
            android:layout_toRightOf="@id/lblopponents"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:text=""/>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/opponentsLayout"
        tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
        android:id="@+id/categoryLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías: "

            android:id="@+id/lblcategory"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryModeTextView"
            android:layout_toRightOf="@id/lblcategory"
            android:paddingLeft="20dp"
            android:layout_alignParentTop="true"
            android:text=""/>

    </RelativeLayout>

    <TextView
        android:text="Jugadores"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/playersTitle"
        android:gravity="left"
        android:layout_below="@+id/categoryLayout"/>

    <ListView
        android:id="@+id/playersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playersTitle">

    </ListView>

    <TextView
        android:text="Categorías"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/categoriesTitle"
        android:gravity="left"
        android:layout_below="@+id/playersList"/>


    <ListView
        android:id="@+id/categoriesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoriesTitle">

    </ListView>

</RelativeLayout>
