<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tuttifrutti.app.ShowGameDetailsActivity"
    android:background="@drawable/background">


            <Button
                android:id="@+id/btnPlay"
                android:background="@drawable/largebutton"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Jugar!"
                android:layout_centerHorizontal="true"
                android:onClick="play"
                />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnPlay"
                android:paddingTop="20dp"
                tools:context="com.example.tuttifrutti.app.ShowGameDetailsActivity"
                android:id="@+id/modeLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo: "
                    android:id="@+id/lblModo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gameModeTextView"
                    android:layout_toRightOf="@id/lblModo"
                    android:paddingLeft="50dp"
                    android:layout_alignParentTop="true"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/modeLayout"
                tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
                android:id="@+id/opponentsLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oponentes: "
                    android:id="@+id/lblopponents"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/opponentsModeTextView"
                    android:layout_toRightOf="@id/lblopponents"
                    android:paddingLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/opponentsLayout"
                tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
                android:id="@+id/categoryLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CategorÃ­as: "

                    android:id="@+id/lblcategory"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categoryModeTextView"
                    android:layout_toRightOf="@id/lblcategory"
                    android:paddingLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:text=""/>

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/categoryLayout"
                tools:context="com.example.tuttifrutti.app.ManageInvitationActivity"
                android:id="@+id/randomPlayersLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de juadores que faltan aceptar: "
                    android:id="@+id/lblRandomPlayers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categoryRandomPlayersTextView"
                    android:layout_toRightOf="@id/lblRandomPlayers"
                    android:paddingLeft="20dp"
                    android:layout_alignParentTop="true"
                    android:text=""/>

            </RelativeLayout>



            <ListView
                android:layout_marginTop="45dp"
                android:id="@+id/detailsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/randomPlayersLayout">

            </ListView>

</RelativeLayout>

