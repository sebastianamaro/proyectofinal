{% extends '::base.html.twig' %}
{% block javascriptsHead %}
  <script src="{{ asset('bundles/category/js/words.js') }}"></script>
{% endblock %}
{% block body -%}
	<h1>Crear nueva categor&iacute;a </h1>  
  <ol class="breadcrumb">
    <li><a href="{{ path('category') }}">Volver al listado de categor√≠as</a></li>
  </ol>
       {{ form_start(form) }}
    
    {{ form_row(form.name) }}
    {{ form_row(form.isFixed) }}

    {% macro prototype(word) %}
         <tr>
             <td>{{form_widget(word.value)}}</td>
             <td> &nbsp;&nbsp;<a href="#">Eliminar Palabra</a></td>
         </tr>
     {% endmacro %}

    <h3>Palabras:</h3>
    {{ form_label(form.acceptedWordsBatch) }}<br>
    {{ form_widget(form.acceptedWordsBatch) }}<br><br>
    <a href="#" class="add_word_link" id="add_word_link">Agregar Palabra</a>
    <table>
        <caption></caption>
        <thead>
          <tr>
            <th>Palabra</th>
          </tr>
        </thead>

        <tbody>
            {% for word in form.acceptedWords %}
                {{_self.prototype(word)}}
            {% endfor %}
        </tbody>
    </table>

 <div class="col-lg-12">
  <div class="form-group">
    <br>{{ form_row(form.submit) }}
  </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}


{% endblock %}
