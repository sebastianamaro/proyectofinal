{% extends '::base.html.twig' %}
{% block javascriptsHead %}
  <script src="{{ asset('bundles/category/js/words.js') }}"></script>
{% endblock %}
{% block body -%}
	<h1>Editar una categor&iacute;a </h1>  
  <ol class="breadcrumb">
    <li><a href="{{ path('category') }}">Volver al listado de categor√≠as</a></li>
  </ol>
       {{ form_start(edit_form) }}
    
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.isFixed) }}
    {{ form_row(edit_form.isReported) }}

    {% macro prototype(acceptedWord) %}
         <tr>
             <td>{{form_widget(acceptedWord.value)}}</td>
             <td> &nbsp;&nbsp;<a href="#">Eliminar Palabra</a></td>
         </tr>
     {% endmacro %}
     {% macro prototype(reportedWord) %}
         <tr>
             <td>{{form_widget(reportedWord.value)}}</td>
             <td> &nbsp;&nbsp;<a href="#">Eliminar Palabra</a></td>
         </tr>
     {% endmacro %}

    <h3>Palabras:</h3>
    <a href="#" class="add_word_link" id="add_word_link">Agregar Palabra</a>
    <table>
        <caption></caption>
        <thead>
          <tr>
            <th>Palabra</th>
          </tr>
        </thead>

        <tbody>
            {% for acceptedWord in edit_form.acceptedWords %}
                {{_self.prototype(acceptedWord)}}
            {% endfor %}
        </tbody>
    </table>

 <div class="col-lg-12">
  <div class="form-group">
    <br>{{ form_row(edit_form.submit) }}
  </div>
</div>
{{ form_rest(edit_form) }}
{{ form_end(edit_form) }}

{% endblock %}